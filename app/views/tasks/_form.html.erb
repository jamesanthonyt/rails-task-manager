<%= form_for @task do |f| %>
  <%= f.label :title, "Enter a title" %>
  <%= f.text_field :title %>
  <%= f.label :details, "Enter some details" %>
  <%= f.text_field :details %>

  <% unless @task.new_record? %>
    <%= f.label :completed, "Completed:" %>
    <%= f.check_box :completed %>
  <% end %>

  <%= f.submit %>
<% end %>



